{
  "git": {
    "commit": true,
    "commitMessage": "chore: release v${version}",
    "tag": true,
    "tagName": "v${version}",
    "push": true
  },
  "github": {
    "release": false
  },
  "npm": {
    "publish": true
  },
  "hooks": {
    "before:init": ["pnpm validate"]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  }
}